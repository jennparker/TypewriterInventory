<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreditsActivity"
    tools:showIn="@layout/activity_credits">

    <TextView
        android:id="@+id/photo_credit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photo_credits_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/photo_credit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample photo credit"/>

</android.support.constraint.ConstraintLayout>